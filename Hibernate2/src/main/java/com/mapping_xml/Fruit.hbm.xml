<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.mapping_xml.Fruit" table="fruit">

		<id name="id" column="fruit_id">
			<generator class="native"></generator>
		</id>

		<property name="name" column="fruit_name" />					<!-- // Here giving column name is optional -->
		<property name="color" column="fruit_color" type="string" />
		<property name="rate" type="int"  />


	</class>
</hibernate-mapping>